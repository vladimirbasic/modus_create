{
  "name": "Modus",
  "version": "0.5",
  "description": "Modus Create PHP API Development Assignment",
  "keywords": [
    "CaloriesProject"
  ],
  "homepage": "http://api.calories-project.com",
  "require": {
    "silex/silex": "~2.0",
    "monolog/monolog": "~1.22",
    "symfony/console": "~2.5",
    "league/fractal": "^0.17.0",
    "symfony/twig-bridge": "^3.3",
    "justinrainbow/json-schema": "^5.2.6"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.3",
    "symfony/browser-kit": "~3.0",
    "squizlabs/php_codesniffer": "^3.1",
    "phpmd/phpmd": "^2.6"
  },
  "autoload": {
    "psr-4": {
      "Modus\\": "src/Modus"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Modus\\Test\\": "test"
    }
  },
  "scripts": {
    "test-u": "vendor/bin/phpunit -c test/Unit/phpunit.xml Test/Unit",
    "test-i": "vendor/bin/phpunit -c test/Integration/phpunit.xml Test/Integration"
  },
  "minimum-stability": "stable"
}
