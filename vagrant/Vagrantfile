BOX_MEM = "2048"
BOX_NAME = "ubuntu/trusty64"

Vagrant.configure("2") do |config|
    config.vm.define "modus_create" do |modus_create|
        modus_create.vm.box = BOX_NAME
        modus_create.vm.network :private_network, ip: "192.168.111.125"
        modus_create.vm.hostname = "moduscreate"
        modus_create.vm.network "forwarded_port", guest: 80, host: 8080
        modus_create.vm.synced_folder "../", "/var/www/modus_create", id: "vagrant-root", owner: "vagrant", group: "www-data"
        modus_create.vm.provider :virtualbox do |vb|
            vb.name = "modus_create"
            vb.customize ["modifyvm", :id, "--memory", BOX_MEM, "--cpus", 1]
        end
        modus_create.vm.provision "ansible" do |ansible|
            ansible.playbook = "../ansible/development.yml"
            ansible.limit = "modus_create"
            ansible.inventory_path = "../ansible/development";
        end
    end
end
